<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorOnSurface">@color/primaryColor</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="CredTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Large</item>
    </style>


    <style name="SectionTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <style name="SectionSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1"/>

    <style name="CredTitleTextView" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:minLines">3</item>
        <item name="android:maxLines">3</item>
        <!--        <item name="android:textSize">18sp</item>-->
    </style>

    <style name="CategoryTextView" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CredDescriptionTextView" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="CredSmallTextView" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:maxLines">1</item>
    </style>

    <style name="CredSmallTextView.Time">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>


</resources>